root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[{.vscode/extensions.json,ide-config/.vscode/extensions.json}]
end_of_line = crlf

[*.{cpp,h,yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.py]
max_line_length = 88

[Makefile]
indent_style = tab
